<mujoco model="bruce_fl_foot">
  <compiler angle="radian" meshdir="assets" autolimits="true"/>

  <option cone="elliptic" impratio="100" timestep="0.002"/>

  <default>
    <default class="visual">
      <geom contype="0" conaffinity="0" group="2"/>
    </default>
    <default class="collision">
      <geom group="3" material="metal" friction="0.4 0.02 0.01"/>
    </default>
  </default>

  <visual>
    <headlight diffuse="0.8 0.8 0.8" ambient="0.4 0.4 0.4" specular="0.5 0.5 0.5"/>
    <global azimuth="120" elevation="0"/>
  </visual>

  <asset>
    <material name="metal" rgba=".9 .95 .95 1" />
    <material name="black" rgba="0 0 0 1" />
    <material name="gray" rgba="0.75294 0.75294 0.75294 1" />

    <mesh name="Link_FL_Thigh" file="Link_FL_Thigh.STL"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="1 1 0.05" type="plane" material="gray" rgba="0.8 0.8 0.8 1"/>

    <body name="Link_FL_Thigh" pos="0 0 0.3"> <!-- 玲玲抬z=0.3, 防卡地看清, 接calf pos -->
      <geom type="mesh" mesh="Link_FL_Thigh" class="visual" material="metal"/> <!-- 美观mesh -->
      <geom pos="-0.09 0.12 -0.11" quat="0.8988 0 -0.4384 0" size="0.2 0.03 0.04" type="box" class="collision" material="black"/> <!-- 玲玲估: pos微移接joint, quat默认Z直立, size半小垫贴mesh, 手动调 -->
    </body>
  </worldbody>
</mujoco>